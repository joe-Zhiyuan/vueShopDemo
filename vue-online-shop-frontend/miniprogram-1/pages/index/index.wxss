/**index.wxss**/
.Logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333333;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.logoImg {
  overflow: hidden;
  width: 186rpx;
  height: 186rpx;
  margin: 20rpx;
}

.login {
  width: 100%;
  padding: 0 40rpx;
  margin-top: 160rpx;
  box-sizing: border-box;
  text-align: center;
}

.loginBtn {
  width: 100%;
  padding: 22rpx 0;
  border-radius: 10rpx;
  color: #fff;
  background-color: #09BB07;
  font-size: 36rpx;
  line-height: 50rpx;
}

.loginPhone {
  color: #666666;
  margin-top: 50rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}